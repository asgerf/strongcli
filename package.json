{
    "name": "strongcli",
    "license": "MIT",
    "version": "0.1.0",
    "devDependencies": {
        "@types/node": "^13.7.0",
        "@types/tape": "^4.2.33",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "faucet": "^0.0.1",
        "tape": "^4.13.0",
        "typescript": "^3.7.5"
    },
    "scripts": {
        "link_src": "mkdir -p build/node_modules && rm build/node_modules/strongcli && ln -fs '../src' build/node_modules/strongcli",
        "watch": "yarn run link_src && tsc -p . -w",
        "build": "yarn run link_src && tsc -p .",
        "lint": "yarn run eslint src/**/*.ts samples/**/*.ts",
        "fix": "yarn run eslint src/**/*.ts samples/**/*.ts --fix",
        "testw": "yarn run tape build/test/{test,commands}.js | faucet",
        "dist": "yarn run build && rm -rf dist && mkdir -p dist && cp LICENSE package.json build/src/*.{js,d.ts} dist/"
    },
    "author": {
        "email": "asger.feldthaus@gmail.com",
        "name": "Asger Feldthaus"
    },
    "repository": {
        "url": "asgerf/strongcli"
    },
    "keywords": ["typescript", "argparser", "cli"]
}
